<body>
  <div id="root"></div>

  <script type="text/babel">
    const { useState, useRef, useEffect } = React;

    function TaskForm({ addTask, isLoading }) {
      const [text, setText] = useState('');
      const buttonRef = useRef(null); // –°—Å—ã–ª–∫–∞ –Ω–∞ –∫–Ω–æ–ø–∫—É
      const spinnerRef = useRef(null); // –°—Å—ã–ª–∫–∞ –Ω–∞ —Å–ø–∏–Ω–Ω–µ—Ä

      const handleSubmit = () => {
        if (text.trim() !== '') {
          addTask(text);
          setText('');
        }
      };

      // –£–ø—Ä–∞–≤–ª—è–µ–º –≤–∏–¥–∏–º–æ—Å—Ç—å—é —Å–ø–∏–Ω–Ω–µ—Ä–∞ –Ω–∞ –∫–Ω–æ–ø–∫–µ
      useEffect(() => {
        if (buttonRef.current && spinnerRef.current) {
          if (isLoading) {
            buttonRef.current.classList.add('loading');
            spinnerRef.current.classList.add('visible');
          } else {
            buttonRef.current.classList.remove('loading');
            spinnerRef.current.classList.remove('visible');
          }
        }
      }, [isLoading]);

      return (
        <div className="task-form-container">
          <input
            type="text"
            placeholder="–ù–æ–≤–∞—è –∑–∞–¥–∞—á–∞..."
            value={text}
            onChange={(e) => setText(e.target.value)}
            onKeyDown={(e) => {
                if (e.key === 'Enter' && !isLoading) {
                    handleSubmit();
                }
            }}
            disabled={isLoading} /* –û—Ç–∫–ª—é—á–∞–µ–º –ø–æ–ª–µ –≤–≤–æ–¥–∞ –≤–æ –≤—Ä–µ–º—è –∑–∞–≥—Ä—É–∑–∫–∏ */
          />
          <button
            ref={buttonRef}
            onClick={handleSubmit}
            disabled={isLoading} /* –û—Ç–∫–ª—é—á–∞–µ–º –∫–Ω–æ–ø–∫—É –≤–æ –≤—Ä–µ–º—è –∑–∞–≥—Ä—É–∑–∫–∏ */
          >
            {isLoading ? (
                <>
                    <div ref={spinnerRef} className="spinner visible"></div>
                    <span style={{opacity: 0}}>–î–æ–±–∞–≤–∏—Ç—å</span> {/* –°–∫—Ä—ã–≤–∞–µ–º —Ç–µ–∫—Å—Ç, –Ω–æ —Å–æ—Ö—Ä–∞–Ω—è–µ–º —à–∏—Ä–∏–Ω—É */}
                </>
            ) : (
                "–î–æ–±–∞–≤–∏—Ç—å"
            )}
          </button>
        </div>
      );
    }

    function TaskList({ tasks, removeTask }) {
      return (
        <ul className="task-list">
          {tasks.map((t, i) => (
            <li key={i}>
              <span>{t}</span>
              <button onClick={() => removeTask(i)}>–£–¥–∞–ª–∏—Ç—å</button>
            </li>
          ))}
        </ul>
      );
    }

    function App() {
      const [tasks, setTasks] = useState([]);
      const [isLoading, setIsLoading] = useState(false); // –°–æ—Å—Ç–æ—è–Ω–∏–µ –∑–∞–≥—Ä—É–∑–∫–∏

      const addTask = (text) => {
        setIsLoading(true); // –í–∫–ª—é—á–∞–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ –∑–∞–≥—Ä—É–∑–∫–∏

        // –ò–º–∏—Ç–∞—Ü–∏—è –∞—Å–∏–Ω—Ö—Ä–æ–Ω–Ω–æ–π –æ–ø–µ—Ä–∞—Ü–∏–∏ (–Ω–∞–ø—Ä–∏–º–µ—Ä, –æ—Ç–ø—Ä–∞–≤–∫–∞ –Ω–∞ —Å–µ—Ä–≤–µ—Ä)
        setTimeout(() => {
          setTasks((prevTasks) => [...prevTasks, text]);
          setIsLoading(false); // –í—ã–∫–ª—é—á–∞–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ –∑–∞–≥—Ä—É–∑–∫–∏
        }, 800); // –ó–∞–¥–µ—Ä–∂–∫–∞ 800–º—Å –¥–ª—è –¥–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü–∏–∏ –∑–∞–≥—Ä—É–∑–∫–∏
      };

      const removeTask = (index) => setTasks(tasks.filter((_, i) => i !== index));

      return (
        <div>
          <h2>üìù –°–ø–∏—Å–æ–∫ –∑–∞–¥–∞—á</h2>
          <TaskForm addTask={addTask} isLoading={isLoading} />
          <TaskList tasks={tasks} removeTask={removeTask} />
        </div>
      );
    }

    const root = ReactDOM.createRoot(document.getElementById('root'));
    root.render(<App />);
  </script>
</body>
</html>
